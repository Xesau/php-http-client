{
  "name": "ddrv/http-client",
  "type": "library",
  "description": "simple HTTP client without cURL dependency",
  "keywords": ["http", "client", "http-client", "without-curl"],
  "license": "MIT",
  "authors": [
    {
      "name": "Ivan Dudarev",
      "email": "ivan@ddrv.ru",
      "homepage": "https://ddrv.ru"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ext-mbstring": "*",
    "ext-zlib": "*",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-factory": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "php-http/client-integration-tests": "^2.0",
    "nyholm/psr7": "^1.3"
  },
  "provide": {
    "psr/http-client-implementation": "1.0"
  },
  "suggest": {
    "psr/http-message-implementation": "Choice your favorite psr-7 implementation",
    "psr/http-factory-implementation": "Choice factory for your psr-7 objects",
    "ddrv/http-client-wrapper-log": "Wrapper for logging"
  },
  "autoload": {
    "psr-4": {
      "Ddrv\\Http\\Client\\": "src/"
    },
    "files": ["src/filter.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Ddrv\\Tests\\Http\\Client\\": "tests/"
    }
  }
}
